	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2017 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>3.0.0</version>
	<description>MOD_BLOCK_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_block">mod_block.php</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_block.ini</language>
		<language tag="en-GB">en-GB.mod_block.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="position"
					type="text"
					label="Module Position"
				/>

				<field
					name="position-class"
					type="text"
					label="Container Class"
				/>

				<field
					name="position-id"
					type="text"
					label="Container ID"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
